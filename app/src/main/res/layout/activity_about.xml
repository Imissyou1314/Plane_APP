<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plane.missyou.plane.view.activity.AboutActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/author_rcode_image"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:scaleType="fitCenter"
        app:riv_border_width="2dip"
        app:riv_corner_radius="40dip"
        app:riv_border_color="@color/foreground"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        app:riv_oval="true"
        android:layout_marginTop="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/about_author_name"
        android:text="@string/about_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/about_author_phone"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginBottom="33dp" />
    <TextView
        android:id="@+id/about_author_phone"
        android:layout_width="wrap_content"
        android:text="@string/about_phone"
        android:layout_height="20dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp" />

</RelativeLayout>
